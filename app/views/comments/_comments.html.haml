- @comments.each do |comment|
  %p
    %strong Body:
    = comment.body
  %p
    %strong By:
    = comment.user.name
  %p
    %strong Published:
    = time_ago_in_words(comment.created_at)
    ago
  %hr
/- if current_user == comment.user
/%p= link_to "Remove Comment", [@commentable, comment], method: :delete, data: { confirm: "Are you sure you want to remove this comment?" }
